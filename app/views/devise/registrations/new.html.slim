h2.text-2xl.font-bold.mb-4 Sign Up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .mb-4
    = f.label :first_name, class: "block text-sm font-medium text-gray-700"
    = f.text_field :first_name, autofocus: true, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm"
  .mb-4
    = f.label :last_name, class: "block text-sm font-medium text-gray-700"
    = f.text_field :last_name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm"
  .mb-4
    = f.label :email, class: "block text-sm font-medium text-gray-700"
    = f.email_field :email, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm"
  .mb-4
    = f.label :password, class: "block text-sm font-medium text-gray-700"
    = f.password_field :password, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm"
  .mb-4
    = f.label :password_confirmation, class: "block text-sm font-medium text-gray-700"
    = f.password_field :password_confirmation, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm"
  .actions
    = f.submit "Sign up", class: "inline-flex items-center px-4 py-2 bg-blue-500 border border-transparent rounded-md font-semibold text-white"
